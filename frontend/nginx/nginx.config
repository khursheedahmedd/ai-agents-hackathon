server {
    listen 80;

    server_name smartgradeai.com;  # Replace with your domain (if applicable)

    root /usr/share/nginx/html;
    index index.html;

    # Handle requests and fallback to index.html for SPA routing
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Enable gzip for better compression and faster load times
    gzip on;
    gzip_types text/plain text/css application/javascript application/json application/xml text/xml application/xml+rss;
    gzip_min_length 1000;
    gzip_vary on;

    # Cache static files (images, CSS, JS, fonts, etc.) for long-term caching
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|woff|woff2|ttf|svg|eot)$ {
        expires 1y;
        access_log off;
    }

    # Serve error pages (optional)
    error_page 404 /404.html;
    location = /404.html {
        root /usr/share/nginx/html;
        internal;
    }

    error_page 500 502 503 504 /50x.html;
    location = /50x.html {
        root /usr/share/nginx/html;
        internal;
    }
}